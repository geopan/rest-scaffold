{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@entities/*": ["src/entities/*"],
      "@ctrl/*": ["src/controllers/*"],
      "@shared/*": ["src/shared/*"],
      "@server": ["src/Server"]
    },
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*", "spec/**/*.ts"]
}
